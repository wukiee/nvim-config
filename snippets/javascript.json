{
    "function": {
        "prefix": "func",
        "description": "Create a method",
        "body": [
            "function ${1}(${2}) {",
            "   ${0}",
            "}"
        ]
    },
    "switch": {
        "prefix": "switch",
        "description": "Create a switch case",
        "body": [
            "switch (${1}) {",
            "   case '${2}':",
            "       ${3}",
            "       break;",
            "   case '${4}':",
            "       ${0}",
            "       break;",
            "}"
        ]
    },
    "if": {
        "prefix": "if",
        "description": "Create an if statement",
        "body": [
            "if (${1}) {",
            "   ${0}",
            "}"
        ]
    },
    "for": {
        "prefix": "for",
        "description": "Create a for loop",
        "body": [
            "for (let i = ${1:0}; i < ${2}; i++) {",
            "   ${0}",
            "}"
        ]
    }
}
